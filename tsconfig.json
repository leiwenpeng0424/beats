{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        // module
        "lib": ["es2020", "dom"],
        "module": "CommonJS",
        "target": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",

        // code style
        "strict": true,
        "alwaysStrict": true,
        "importHelpers": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,

        // declaration
        "declaration": true,
        "declarationDir": ".declarations",

        // path alias
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/"]
}
