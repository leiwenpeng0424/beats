{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["es2020"],
        "module": "CommonJS",
        "target": "ESNext",
        "importHelpers": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",

        "declaration": true,
        "declarationDir": "dist"
    },
    "include": ["src/"]
}
