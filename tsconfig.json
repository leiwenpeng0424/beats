{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        // module
        "lib": ["ESNext", "dom"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ESNext",

        // code style
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": false,
        "isolatedModules": true,
        "skipLibCheck": true,
        "strict": true,

        "noEmit": true
    }
}

