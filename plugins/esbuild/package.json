        "@nfts/beats": "0.0.14",
        "@nfts/tsc-json": "^0.1.1",
        "@types/node": "^20.4.2",
        "esbuild": "^0.18.13",
        "rollup": "^3.26.3",
        "typescript": "5.1.6",
        "vitest": "^0.33.0"
    },
    "peerDependencies": {
        "esbuild": "^0.18.13",
        "typescript": "^5.0.4"
    }
