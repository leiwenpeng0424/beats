{
    "name": "@nfts/plugin-esbuild",
    "version": "0.0.1",
    "main": "./npm/index.cjs",
    "module": "./npm/index.mjs",
    "types": "./npm/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": "./npm/index.mjs",
            "require": "./npm/index.cjs",
            "types": "./npm/index.d.ts"
        }
    },
    "scripts": {
        "dev": "npm run start",
